<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    tools:context=".ConfirmAddressActivity">

    <!-- =========== DECORATIVE HEADER =========== -->
    <TextView
        android:id="@+id/confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm address"
        android:textSize="18sp"
        android:textColor="@color/splash_subtitle_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/background_circle"
        app:tint="@color/light_pink_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="-30dp"
        android:contentDescription="@null" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/background_circle"
        app:tint="@color/light_lavender_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-90dp"
        android:contentDescription="@null" />

    <!-- =========== MAIN CONTENT =========== -->

    <!-- Main illustration with border -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/illustration_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="#8C9EFF"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintVertical_bias="0.15">

        <ImageView
            android:id="@+id/illustration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="illustration"
            android:src="@drawable/illustration_splash"
            android:scaleType="centerInside"
            android:padding="16dp"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please enter the verification code we sent to your email address."
        android:textSize="18sp"
        android:textColor="@color/splash_subtitle_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/illustration_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <!-- OTP Boxes Container -->
    <!-- activity_confirm_address.xml -->
    <LinearLayout
        android:id="@+id/otp_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- The <style> block has been REMOVED from here -->

        <EditText android:id="@+id/otp_box_1" style="@style/OtpEditTextStyle" />
        <EditText android:id="@+id/otp_box_2" style="@style/OtpEditTextStyle" />
        <EditText android:id="@+id/otp_box_3" style="@style/OtpEditTextStyle" />
        <EditText android:id="@+id/otp_box_4" style="@style/OtpEditTextStyle" />
        <EditText android:id="@+id/otp_box_5" style="@style/OtpEditTextStyle" />

    </LinearLayout>


    <!-- Verify Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:backgroundTint="@color/splash_login_button"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/otp_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <!-- Resend Link -->
    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend_prompt"
        android:textSize="14sp"
        android:textColor="@color/splash_subtitle_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
