<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    tools:context=".SignupActivity">

    <!-- =========== DECORATIVE HEADER =========== -->
    <TextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="registration form"
        android:textSize="18sp"
        android:textColor="@color/splash_subtitle_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/background_circle"
        app:tint="@color/light_pink_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="-30dp"
        android:contentDescription="@null" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/background_circle"
        app:tint="@color/light_lavender_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-90dp"
        android:contentDescription="@null" />

    <!-- =========== MAIN CONTENT (SCROLLABLE) =========== -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/signup_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Main illustration -->
            <ImageView
                android:id="@+id/illustration"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:contentDescription="illustration"
                android:src="@drawable/illustration_splash"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- First Name Label -->
            <TextView
                android:id="@+id/label_firstname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:textColor="@color/splash_subtitle_text"
                app:layout_constraintTop_toBottomOf="@id/illustration"
                app:layout_constraintStart_toStartOf="@+id/input_firstname"
                app:layout_constraintEnd_toEndOf="@+id/input_firstname"
                android:layout_marginTop="16dp"/>

            <!-- First Name Input -->
            <EditText
                android:id="@+id/input_firstname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="John"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/label_firstname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>

            <!-- Last Name Label -->
            <TextView
                android:id="@+id/label_lastname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textColor="@color/splash_subtitle_text"
                app:layout_constraintTop_toBottomOf="@id/input_firstname"
                app:layout_constraintStart_toStartOf="@+id/input_lastname"
                app:layout_constraintEnd_toEndOf="@+id/input_lastname"
                android:layout_marginTop="12dp"/>

            <!-- Last Name Input -->
            <EditText
                android:id="@+id/input_lastname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Doe"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/label_lastname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>

            <!-- Email Label -->
            <TextView
                android:id="@+id/label_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email address:"
                android:textColor="@color/splash_subtitle_text"
                app:layout_constraintTop_toBottomOf="@id/input_lastname"
                app:layout_constraintStart_toStartOf="@+id/input_email"
                app:layout_constraintEnd_toEndOf="@+id/input_email"
                android:layout_marginTop="12dp"/>

            <!-- Email Input -->
            <EditText
                android:id="@+id/input_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="email@domain.com"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/label_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>

            <!-- Password Label -->
            <TextView
                android:id="@+id/label_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textColor="@color/splash_subtitle_text"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_email"
                app:layout_constraintStart_toStartOf="@id/input_password"
                app:layout_constraintEnd_toEndOf="@+id/input_password"/>

            <!-- Password Input -->
            <EditText
                android:id="@+id/input_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="My super secure password"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/label_password"
                app:layout_constraintStart_toStartOf="@id/input_email"
                app:layout_constraintEnd_toEndOf="@id/input_email"/>

            <!-- Confirm Password Label -->
            <TextView
                android:id="@+id/label_confirm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Confirm Password:"
                android:textColor="@color/splash_subtitle_text"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/input_password"
                app:layout_constraintStart_toStartOf="@+id/input_confirm_password"
                app:layout_constraintEnd_toEndOf="@+id/input_confirm_password"/>

            <!-- Confirm Password Input -->
            <EditText
                android:id="@+id/input_confirm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Repeat password"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/label_confirm_password"
                app:layout_constraintStart_toStartOf="@id/input_email"
                app:layout_constraintEnd_toEndOf="@id/input_email"/>

            <!-- Register Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register_submit"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="25dp"
                app:backgroundTint="@color/splash_login_button"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/input_confirm_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
